{
  "name": "easer",
  "description": "A simple, generic express server with built-in authentication and authorization",
  "version": "2.0.0",
  "keywords": [
    "cli",
    "util",
    "tool",
    "utility"
  ],
  "author": {
    "name": "Tam√°s Benke",
    "email": "tombenke@gmail.com"
  },
  "bugs": {
    "url": "https://github.com/tombenke/easer/issues"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "http://github.com/tombenke/easer.git"
  },
  "bin": {
    "easer": "./dist/app.js"
  },
  "main": "dist/index",
  "dependencies": {
    "datafile": "^3.2.0",
    "lodash": "4.17.4",
    "npac": "^1.3.2",
    "yargs": "10.0.3",
    "bcrypt": "^1.0.3",
    "bcrypt-nodejs": "latest",
    "body-parser": "~1.15.2",
    "connect-ensure-login": "^0.1.1",
    "connect-flash": "~0.1.1",
    "cookie-parser": "~1.4.3",
    "ejs": "~2.5.2",
    "expect": "^21.2.1",
    "express": "~4.14.0",
    "express-session": "~1.14.1",
    "method-override": "~2.3.6",
    "morgan": "~1.7.0",
    "passport": "~0.3.2",
    "passport-facebook": "~2.1.1",
    "passport-google-oauth": "~1.0.0",
    "passport-local": "~1.0.0",
    "passport-twitter": "~1.0.4"
  },
  "devDependencies": {
    "babel-cli": "6.16.0",
    "babel-core": "6.26.0",
    "babel-loader": "6.2.5",
    "babel-plugin-transform-object-rest-spread": "6.20.2",
    "babel-plugin-transform-es2015-parameters": "^6.24.1",
    "babel-polyfill": "6.16.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-latest": "6.24.1",
    "babel-register": "6.16.3",
    "chai": "^4.1.2",
    "coveralls": "^3.0.0",
    "cross-env": "^5.1.1",
    "eslint": "^3.13.1",
    "expect": "^1.6.0",
    "gulp": "^3.9.1",
    "gulp-debug": "^3.1.0",
    "gulp-markdown": "^1.2.0",
    "gulp-mustache": "^3.0.0",
    "gulp-rename": "^1.2.2",
    "gulp-through": "^0.4.0",
    "istanbul": "1.0.0-alpha.2",
    "jsdoc": "^3.5.5",
    "mocha": "^4.0.1",
    "mocha-lcov-reporter": "^1.3.0",
    "pre-push": "^0.1.1",
    "rimraf": "^2.6.2",
    "should": "3.1.2",
    "vinyl-buffer": "^1.0.0"
  },
  "scripts": {
    "build": "babel src --presets babel-preset-es2015 --out-dir dist && cp -r src/adapters/webServer/config/defaults/ dist/adapters/webServer/config/defaults/",
    "lint": "eslint src/**.js",
    "test": "cross-env NODE_ENV=test mocha --recursive --compilers js:babel-register 'src/**/*.spec.js'",
    "test:watch": "npm test -- --watch",
    "coverage": "NODE_ENV=test istanbul cover _mocha -- recursive --compilers js:babel-register --timeout 15000 'src/**/*.spec.js'",
    "coveralls": "NODE_ENV=test istanbul cover _mocha --report lcovonly -- recursive --compilers js:babel-register --timeout 15000 'src/**/*.spec.js' -R spec && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage",
    "docs": "rm -fr ./docs/api/* && jsdoc -c ./.jsdoc.json",
    "docgen": "node_modules/.bin/gulp docgen",
    "prepublishOnly": "npm run lint && npm run test && npm run build && npm run docs",
    "all": "npm run lint && npm run coverage && npm run build && npm run docs"
  },
  "pre-push": [
    "lint",
    "test"
  ]
}
